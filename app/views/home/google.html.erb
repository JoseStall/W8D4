	<div style='width: 1200px;'>
		<div id="map" style='width: 1200px; height: 600px ;'></div>
	</div>
	<script src="//maps.google.com/maps/api/js?key=AIzaSyCglnqa60IQfoc6tmgBT8eUgoPiX9btfLc"></script>
	<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
	<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> 
	<script>
		handler = Gmaps.build('Google');
		handler.buildMap({ provider: {
		}, internal: {id: 'map'}}, function(){
			markers = handler.addMarkers([
			{
				"lat": <%= (@lat == 0.0 ? "50.62924999999999" : @lat) %>,
				"lng": <%= (@lon == 0.0 ? "3.057256000000052" : @lon) %>,
				"infowindow": "<%= @message %>",
				zoom: 5
			}
			]);
			handler.bounds.extendWith(markers);
			handler.fitMapToBounds();
		});
	</script>

	<div class="form-group">
		<div><%= form_tag("/", method: "get") do %>
			<%= label_tag(:q, "Latitude :   ") %>
			<%= text_field_tag(:latitude) %> <br>
			<%= label_tag(:q, "longitude: ") %>
			<%= text_field_tag(:longitude) %> <br>
			<%= label_tag(:q, "Marqueur: ") %>
			<%= text_field_tag(:message) %>

			<%= submit_tag("trouver") %>
			<% end %></div>
		</div>
